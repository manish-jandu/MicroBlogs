<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.addEditArticle.AddEditArticleFragment"
        >

    <EditText
            android:id="@+id/edit_text_article_title"
            android:hint="Article Title"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content" />

    <EditText
            android:id="@+id/edit_text_article_about"
            android:hint="What's this article about?"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content" />

    <EditText
            android:id="@+id/edit_text_article"
            android:hint="Write your Article(in markdown)"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content"
            />

    <EditText
            android:id="@+id/edit_text_article_tags"
            android:hint="Enter Tags"
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="18dp">

        <Button
                android:id="@+id/button_submit_delete_article"
                android:text="Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:visibility="gone"/>

        <Button
                android:id="@+id/button_submit_article"
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>